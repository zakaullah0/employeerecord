<h1><%= @employee.name %></h1>

<p><%= "Employee Designation: #{@employee.designation}" %></p>
<p><%= "Employee Grade: #{@employee.grade}" %></p>
<p><%= "Employee ID: #{@employee.id}" %></p>

<ul>
  <li><%= link_to "Edit", edit_employee_path(@employee) %></li>
  <li><%= link_to "Destroy", employee_path(@employee), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
                  
</ul>